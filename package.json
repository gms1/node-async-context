{
  "name": "asyncctx",
  "version": "1.0.5",
  "description": "an asynchronous execution context for TypeScript/JavaScript",
  "main": "./index.js",
  "types": "./index.d.ts",
  "tags": [
    "javascript",
    "typescript",
    "asynchronous context",
    "execution context",
    "cls",
    "continuous local storage"
  ],
  "author": {
    "email": "www.gms@gmx.at",
    "name": "Guenter Sandner"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gms1/node-async-context.git"
  },
  "bugs": {
    "url": "https://github.com/gms1/node-async-context/issues"
  },
  "homepage": "https://github.com/gms1/node-async-context",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "tsc -p tsconfig.json",
    "rebuild": "npm run clean && npm run build",
    "test:run": "node spec/jasmine-runner.js",
    "test": "npm run build && npm run test:run",
    "watch": "tsc -w -p tsconfig.json",
    "coverage:run": "nyc -e .ts -x '**/*.spec.ts' jasmine-ts './src/**/*.spec.ts' --include='./src/**/*.ts' --exclude='./src/**/*.spec.ts'",
    "coverage:report": "nyc report --reporter=text-lcov",
    "coverage:html": "nyc report --reporter=html",
    "coverage:coveralls": "nyc report --reporter=text-lcov | coveralls",
    "typedoc": "typedoc --options typedoc.json --out docs/typedoc/asyncctx --exclude '**/*.spec.ts' src/",
    "prepublishOnly": "echo \"ERROR: please use the dist-folder for publishing\" && exit 1",
    "release:build": "npm run clean && npm run build && npm run test:run && npm run _pubprep",
    "release:publish": "npm run typedoc && cd dist && npm --access public publish",
    "_pubprep": "ts-node --project=build/ts/tsconfig.json --cache-directory=tmp/cache/ts-node build/ts/publish-prepare.ts"
  },
  "dependencies": {
    "stack-chain": "^2.0.0",
    "semver": "^5.5.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.3",
    "@types/jasmine": "^2.8.8",
    "@types/node": "^10.3.3",
    "coveralls": "^3.0.1",
    "fs-extra": "^7.0.0",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "nyc": "^12.0.2",
    "rimraf": "^2.6.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typedoc": "^0.11.1",
    "typescript": "^2.9.2"
  },
  "typescript": {
    "definition": "./index.d.ts"
  },
  "engines": {
    "node": "^4.7 || ^6.9.2 || ^7.3 || ^8.2 || ^9.0 || ^10.0"
  }
}
